{
  "private": true,
  "name": "numberset",
  "version": "0.0.0-alpha.0",
  "description": "Small library to perform set operations on number sets",
  "keywords": [
    "numberset",
    "number",
    "set",
    "interval",
    "math"
  ],
  "homepage": "https://github.com/NickGaertner/NumberSet#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/NickGaertner/NumberSet.git"
  },
  "bugs": "https://github.com/NickGaertner/NumberSet/issues",
  "license": "ISC",
  "author": {
    "name": "Nick GÃ¤rtner",
    "email": "nick.gaertner@pm.me"
  },
  "exports": {
    ".": {
      "import": {
        "default": "./lib/esm/index.mjs",
        "types": "./lib/esm/types/index.d.js"
      },
      "require": {
        "default": "./lib/cjs/index.js",
        "types": "./lib/cjs/types/index.d.js"
      }
    }
  },
  "main": "./lib/cjs/index.js",
  "types": "./lib/cjs/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build:all": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc -p ./tsconfig.esm.json &&  renamer --find /\\.js$/ --replace .mjs \"lib/esm/**\"",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage",
    "docs:html": "typedoc --plugin none src/index.ts",
    "docs:md": "typedoc --plugin typedoc-plugin-markdown src/index.ts",
    "pack": "npm pack",
    "prepack": "npm run build:all",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "globstar": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "renamer": "^4.0.0",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "tsx": "^3.12.3",
    "typedoc": "^0.23.25",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "rules": {
      "tsdoc/syntax": "warn"
    },
    "ignorePatterns": [
      "coverage/*",
      "lib/*",
      "node_modules/*",
      "docs/*",
      ".*/**/*"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "json-summary"
    ]
  }
}
