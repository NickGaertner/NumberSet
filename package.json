{
  "private": true,
  "name": "numberset",
  "version": "0.0.0",
  "description": "A small library to work with sets of numbers that can be represented by a finite amount of intervals",
  "keywords": [
    "numberset",
    "number",
    "set",
    "interval",
    "intervaltree",
    "math",
    "real",
    "realset"
  ],
  "homepage": "https://github.com/NickGaertner/NumberSet",
  "bugs": "https://github.com/NickGaertner/NumberSet/issues",
  "license": "ISC",
  "author": {
    "name": "Nick GÃ¤rtner",
    "email": "nick.gaertner@pm.me"
  },
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/*.js",
    "lib/*.d.ts",
    "Documentation.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/NickGaertner/NumberSet.git"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rimraf lib",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage",
    "docs:md": "typedoc --plugin typedoc-plugin-markdown src/index.ts",
    "pack": "npm pack",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "globstar": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "tsx": "^3.12.3",
    "typedoc": "^0.23.25",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "rules": {
      "tsdoc/syntax": "warn"
    },
    "ignorePatterns": [
      "coverage/*",
      "lib/*",
      "node_modules/*",
      "docs/*",
      ".*/**/*"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "json-summary"
    ]
  }
}
