{
  "compilerOptions": {
    "allowJs": false,
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist/lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/**/*", "test/**/*"]
}
